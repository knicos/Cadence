SHELL=/bin/sh

CC=@CC@
CPP=@CXX@
CPPFLAGS=@CXXFLAGS@
LDFLAGS=@LDFLAGS@ 
INCLUDES=-I@top_srcdir@/libcadence/include -I@top_builddir@/libcadence/include -I@top_srcdir@/modules/wgd_base/include -I@top_srcdir@/modules/wgd_base_2d/include -I@top_srcdir@/modules/wgd_resources_base/include -I@top_srcdir@/modules/wgd_base_3d/include

SOURCES=base2d.cpp camera2d.cpp instance2d.cpp scene2d.cpp sprite2d.cpp
OBJECTS=$(SOURCES:.cpp=.o)
LIB=libcadence_wgd_base_2d.so

all: $(SOURCES) $(LIB)

$(LIB): $(OBJECTS)
	$(CPP) --shared $(LDFLAGS) -o ../$@ $(OBJECTS) @WGDLIBS@ -L../../wgd_base -L../../wgd_resources_base -lcadence_wgd_base -lcadence_wgd_resources_base


.cpp.o:
	$(CPP) -fPIC -c $(CPPFLAGS) $(INCLUDES) $< -o $@

clean:
	rm *.o

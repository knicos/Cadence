SHELL=/bin/sh
SCRIPT_PATH=@prefix@/share/cadence/scripts
LIB_PATH=@prefix@/lib
INCLUDE_PATH=@prefix@/include

default:: cadence

cadence::
	cd src; make

install:: cadence
	install -d "$(LIB_PATH)" "$(SCRIPT_PATH)" "$(INCLUDE_PATH)"
	install -m 755 libcadence.so "$(LIB_PATH)"
	cd ./scripts; make install
	cd include; make install


clean::
	cd src; make clean